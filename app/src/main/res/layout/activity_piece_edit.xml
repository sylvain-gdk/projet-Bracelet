<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.creationsmp.pieces.PieceEditDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/codePiece_text"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/field_piece_view_text_padding"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@color/colorAccent"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/nomPieceLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nomPiece_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nomPieceHint"
            android:inputType="text|textAutoCorrect|textAutoComplete"
            android:maxLength="20"
            android:selectAllOnFocus="true"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/descriptionPieceLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/descriptionPiece_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descriptionPieceHint"
            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine"
            android:maxLength="64"
            android:maxLines="2"
            android:minLines="2"
            android:selectAllOnFocus="true"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/dimensionPieceLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dimensionPiece_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dimensionLargeurPieceHint"
            android:inputType="numberSigned"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/prixCoutantPieceLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/prixCoutantPiece_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prixCoutantPieceHint"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:selectAllOnFocus="true"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/qtyPieceLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/qtyPiece_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/qtyPieceHint"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:selectAllOnFocus="true"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="@string/typePieceLabel"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/typePiece_edit"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_margin="5dp"
            android:background="@color/colorField"
            android:hint="@string/typePieceHint"
            android:popupBackground="?attr/colorButtonNormal"
            android:spinnerMode="dropdown"
            android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="@string/categoriePieceLabel"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/categoriePiece_edit"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_margin="5dp"
            android:background="@color/colorField"
            android:hint="@string/categoriePieceHint"
            android:popupBackground="?attr/colorButtonNormal"
            android:spinnerMode="dropdown"
            android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/colorField"
            android:onClick="prendrePhotoListener"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_add_a_photo_black_48dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <Button
            android:id="@+id/modifierPieceBouton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="modifierPieceListener"
            android:text="@string/modifierBoutonLabel" />

        <Button
            android:id="@+id/annulerAjouterPieceBouton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="annulerAjouterPieceListener"
            android:text="@string/annulerBoutonLabel" />


    </LinearLayout>

</LinearLayout>

