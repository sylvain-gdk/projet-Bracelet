<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.creationsmp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PieceAddActivity"
            android:label="@string/ajouterPieceBoutonLabel"
            android:parentActivityName="InventairePiecesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="InventairePiecesActivity" />
        </activity>

        <activity
            android:name=".PieceEditActivity"
            android:label="@string/modifierPieceBoutonLabel"
            android:parentActivityName="PieceViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="PieceViewActivity" />
        </activity>

        <activity
            android:name=".PieceViewActivity"
            android:label="@string/piecesLabel"
            android:parentActivityName="InventairePiecesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="InventairePiecesActivity" />
        </activity>

        <activity
            android:name=".InventairePiecesActivity"
            android:label="@string/inventairePieceLabel"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

        <activity
            android:name=".SettingsInventairePiecesActivity"
            android:label="@string/title_activity_inventaire"
            android:parentActivityName="InventairePiecesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="InventairePiecesActivity" />
        </activity>

        <activity
            android:name=".SettingsPiecesActivity"
            android:label="@string/title_activity_piece"
            android:parentActivityName="PieceViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="PieceViewActivity" />
        </activity>

    </application>

</manifest>